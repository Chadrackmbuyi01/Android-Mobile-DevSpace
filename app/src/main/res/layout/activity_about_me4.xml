<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finish"
    android:orientation="vertical"
    tools:context=".AboutMeActivity4">

    <Button
        android:id="@+id/but2"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:text="Return" />

    <TextView
        android:id="@+id/white"
        android:layout_width="154dp"
        android:layout_height="45dp"
        android:layout_below="@+id/but2"
        android:layout_marginTop="28dp"
        android:text="My Profile"
        android:layout_marginHorizontal="120dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="133dp"
        android:layout_height="556dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="140dp"
        android:text="I'm Chadrack Mbuyi Kalala, a Software development
        student at CPUT. I choose Mobile Programming
        because it has impact me whereby these types of applications are comfortable and simple to operate ,
        simple to access ( one-click access ) and give essential notifications immediately. I like while coding, it
        motivates me to learn and dig more when it comes about the modern technology. I also play soccer and basketball with my team.
        Playing sports is my favorite pastime and my hobby because it's not just the games I love,
        but also the socializing part that comes with it. My vision in life is to build a world known drone application for
        the long-distance deliveries spatial... Thank You so much for reading my Profile."
        android:textColor="@color/white"
        android:textSize="12dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/photo"
        android:layout_toRightOf="@+id/message"
        android:id="@+id/image1"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="48dp"
        android:src="@drawable/corner"
        android:layout_toRightOf="@+id/message"
        android:id="@+id/image2"/>




</RelativeLayout>